<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/bc22"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TextCatActivity">

    <Button
        android:id="@+id/buttonspel"
        android:layout_width="111dp"
        android:layout_height="63dp"
        android:layout_marginTop="77dp"
        android:text="@string/click"
        android:background="@color/white2"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextspel" />

    <EditText
        android:id="@+id/editTextspel"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginBottom="441dp"
        android:inputType="text"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnvoice" />

    <TextView
        android:id="@+id/textViewspel"
        android:layout_width="79dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:text=""
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.213" />

    <TextView
        android:id="@+id/textViewcorr"
        android:layout_width="141dp"
        android:layout_height="77dp"
        android:layout_marginTop="116dp"
        android:text=""
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.855"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonspel" />

    <ImageButton
        android:id="@+id/btnvoice"
        android:layout_width="119dp"
        android:layout_height="108dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="78dp"
        android:scaleType="centerCrop"
        android:scrollbarSize="4dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextspel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/voice" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="229dp"
        android:layout_height="36dp"
        android:text="@string/enter_the_word3"
        android:textSize="20sp"
        android:textStyle="italic"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewspel"
        app:layout_constraintVertical_bias="0.088" />
    <Button
        android:id="@+id/languageDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/white2"
        android:text="TR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>