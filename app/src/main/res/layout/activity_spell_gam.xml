<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/bc22"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TextCatActivity">


    <Button
        android:id="@+id/buttonspel"
        android:layout_width="142dp"
        android:layout_height="53dp"
        android:layout_marginBottom="227dp"
        android:text="@string/continue2"
        android:background="@color/white2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextspel" />

    <EditText
        android:id="@+id/editTextspel"
        android:layout_width="224dp"
        android:layout_height="44dp"
        android:layout_marginBottom="96dp"
        android:hint="@string/enter_the_word"
        android:inputType="text"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonspel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnvoice" />

    <ImageButton
        android:id="@+id/btnvoice"
        android:layout_width="149dp"
        android:layout_height="108dp"
        android:layout_marginBottom="43dp"
        android:scaleType="centerCrop"
        android:scrollbarSize="4dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextspel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/voice" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="299dp"
        android:layout_height="45dp"
        android:layout_marginTop="107dp"
        android:text="@string/click_to_the_sound_button"
        android:textSize="20sp"
        android:textStyle="italic"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/btnvoice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/languageDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/white2"
        android:text="TR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>